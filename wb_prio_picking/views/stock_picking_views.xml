<odoo>
    <data>
    <record  id="prio_picking_inherit" model="ir.ui.view">
      <field name="name">prio_picking_inherit</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
          <!-- Agrega campos al formulario de Compra -->
          <xpath expr="//field[@name='origin']" position="after">
              <field name="pick_zone" attrs="{'invisible': ['|','|', '|', ('name','=ilike','OUT'), ('name','=ilike','IN'), ('name','=ilike','RET'), ('name','=ilike','INT') ]}"/>
              <field name="sale_date"  attrs="{'invisible': ['|','|', '|', ('name','=ilike','OUT'), ('name','=ilike','IN'), ('name','=ilike','RET'), ('name','=ilike','INT') ]}"/>
              <field name="has_guide_number" invisible="1"/>
              <field name="has_guide_number_index" readonly="1" attrs="{'invisible': ['|','|', '|', ('name','=ilike','OUT'), ('name','=ilike','IN'), ('name','=ilike','RET'), ('name','=ilike','INT') ]}"/>
              <field name="is_colecta" readonly="1" attrs="{'invisible': ['|','|', '|', ('name','=ilike','OUT'), ('name','=ilike','IN'), ('name','=ilike','RET'), ('name','=ilike','INT') ]}"/>
          </xpath>
      </field>
    </record>
    </data>
</odoo>
